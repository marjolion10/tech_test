{% extends 'base.html.twig' %}

{% block title %}Tache{% endblock %}

{% block body %}
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Détail de la tâche</h3>
    </div>
    <div class="panel-body">

        <table class="table table-striped table-hover">
            <tbody>
                <tr>
                    <th>Titre</th>
                    <td>{{ tache.titre }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ tache.description }}</td>
                </tr>
                <tr>
                    <th>Statut</th>
                    <td>{{ tache.statut }}</td>
                </tr>
                <tr>
                    <th>CreatedAt</th>
                    <td>{{ tache.createdAt ? tache.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

    </div>
    <ul class="nav nav-pills">
        <li><a href="{{ path('tache_index') }}">Retour à la liste<span class="badge"></span></a></li>
        <li><a href="{{ path('tache_edit', {'id': tache.id}) }}">Modifier<span class="badge"></span></a></li>
    </ul>

    {{ include('tache/_delete_form.html.twig') }}
</div>    

{% endblock %}
